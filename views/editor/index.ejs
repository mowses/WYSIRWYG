<div ng-controller="EditorController" class="editor" ng-cloak>
	
	<div class="slides">
		<ol>
			<li class="slide" ng-class="{selected: slide.selected}" ng-click="slides.deselectAllSlides(); slides.selectSlide(id);" ng-repeat="(id, slide) in data.slides">
				<div class="preview"></div>
				<p class="slide-name" ng-bind="slide.name"></p>
			</li>
		</ol>
	</div>

	<div ng-if="slide.component" ng-show="slide.selected" ng-repeat="(i, slide) in data.slides">
		<label>
			Theme:
			<select ng-options="theme as theme for theme in slide.themes" ng-model="slide.selectedTheme">
				<option value="">--no theme--</option>
			</select>
		</label>

		<div class="stage" editable-area ng-mousedown="deselectCtrlBB($event)" ng-mousemove="rulers.updateMousePosition($event);">
			<ruler orientation="horizontal" from="0" to="1500" step="50" watcher="{'mousePosition': 'rulers.updateRulerFloatingMarker'}"></ruler>
			<ruler orientation="vertical" from="0" to="1500" step="50"></ruler>
			<!-- <div style="background:pink; height: 100px; width: 100px; padding: 20px; margin: 5px;">=======</div> -->
			
			<bounding-box draggable="slide.boundingBox.draggable" id="{{slide.component.name}}" resizable="slide.boundingBox.resizable" ng-mousedown="toggleCtrlBB($event)" class="{{slide.selectedTheme}}" watcher="{'slide.component.styles[\'&.{{slide.selectedTheme}}\'].display': 'updateResizable', 'slide.component.styles[\'&.{{slide.selectedTheme}}\'].position': 'updateDraggable', 'slide.selectedTheme': 'checkDisableResizable'}">
				<component data="slide.component" ng-attr-id="component-{{slide.component.name}}" controller-name="{{data.name}}Controller" class="slide"></component>
			</bounding-box>


			

			<!-- <div style="background:red; height: 100px; padding: 20px; margin: 5px; float: left;">1</div>
			<div style="background:green; height: 150px; padding: 20px; margin: 5px; float: left; position: absolute; left: 180px; border: 20px solid gold; border-right-width: 10px; border-bottom-width: 5px; border-left-width: 0px">2</div>
			<div style="background:yellow; height: 100px; padding: 20px; margin: 5px; float: left;">3</div>
			<div style="background:blue; height: 100px; padding: 20px; margin: 5px; float: left;">4</div>
			<hr /> -->
		
		</div>
	</div>
</div>