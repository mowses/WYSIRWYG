<div ng-controller="RawEditorController" class="components-index">

	<ion-view view-title="ComponentsList">
		
		<div class="bar bar-header bar-positive">
			<h1 class="title">Components</h1>
		</div>

		<ion-content class="has-header">
			<ion-list ng-if="data.components" ng-cloak>
				<ion-item ng-repeat="component in data.components" class="item-icon-right">
					{{component.name}}
					<i class="icon ion-chevron-right icon-accessory"></i>
					<ion-option-button class="button-energized" ng-click="openEdition(component);">Edit</ion-option-button>
				</ion-item>
			</ion-list>
		</ion-content>
	</ion-view>



  
  	<ion-view view-title="ComponentsEdition" ng-show="editingComponent" ng-cloak>
