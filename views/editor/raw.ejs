					    <input type="text" placeholder="Component Name" name="name" ng-model="editingComponent.name" required />					
					  </li>
					  
					<ion-button class="button button-block button-positive" ng-click="acceptChanges(true);">Edit</ion-button>
				</ion-list>
			</form>
	    </ion-content>
	</ion-view>
	
